{
    "compilerOptions": {
        "target": "ESNext",
        "module": "NodeNext",
        "strict": true,
        "verbatimModuleSyntax": true,
        "skipLibCheck": true,
        "types": [
            "node"
        ],
        "jsx": "react-jsx",
        "jsxImportSource": "hono/jsx",
        "outDir": "./dist",
        "paths": {
            "$middleware/*": [
                "./src/middleware/*"
            ],
            "$auth.config": [
                "./src/auth.config.ts"
            ],
            "$database":[
                "./src/database.ts"
            ]
        }
    },
    "exclude": [
        "node_modules"
    ]
}